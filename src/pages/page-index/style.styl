@import "@/styles/layout.styl";
@import 'swiper/dist/css/swiper.css';

.index-page-wrap
  .index-content
    position relative
    .main-banner-wrap
      width 100%
      height 535px
      position relative
      .swiper-container-banner
        position relative
        .banner-pagination
          position absolute
          top 358px
          height 3px
          z-index 111
          left 50%
          max-width 640px
          margin-left -640px
          .swiper-pagination-bullet
            width 30px
            height 3px
            border-radius 1.5px
            margin-right 8px
            background-color #999999
            cursor pointer
          .swiper-pagination-bullet-active
            background-color #2366ef
        .full-banner-wrap
          height 100%
          background-repeat no-repeat
          background-size auto 535px
          background-position-y center
          background-position-x center
          .banner-content-wrap
            width 1280px
            position relative
            height 535px
            margin 0 auto
            .main-title
              width 100%
              text-align left
              font-weight 500
              font-size 40px
              color #FFFFFF
              line-height 56px
              padding-top 120px
            .banner-black
              color #374567
            .desc-item-wrap
              margin-top 16px
              .main-desc
                font-size 16px
                color rgba(255,255,255,0.85)
                width 600px
                text-align justify
                line-height 28px
              .banner-black
                color #374567
            .main-btn
              background-image linear-gradient(90deg, #5360fb 0%, #01bbdd  96%)
              border-radius 2px
              width 108px
              display block
              font-weight 500
              cursor pointer
              font-size 14px
              color #FFFFFF
              line-height 36px
              text-align center
              height 36px
              margin-top 32px
      .column-wrap
        height 95px
        width 100%
        position absolute
        top 440px
        left 0
        background rgba(7,17,33,0.5)
        z-index 10
        .column-content
          margin 0 auto
          width 1280px
          height 100%
          position relative
          .column-cell
            width 25%
            height 100%
            padding 24px
            cursor pointer
            transition all 0.3s ease-in-out
            .tit
              height 28px
              line-height 28px
              display inline-block
              width 100%
              text-align center
            .desc
              margin-top 6px
              width 100%
              text-align center
              font-size 14px
          .column-cell:hover
            background-image linear-gradient(90deg, #5360fb 0%, #01bbdd  96%)
    .product-wrap
      width 100%
      position relative
      overflow hidden
      background-color #ffffff
      .product-content
        margin 0 auto 40px auto
        width 1280px
        overflow hidden
        position relative
        .product-view
          height 420px
          width 948px
          margin 0 auto 20px auto
          position relative
          .product-cell
            width 300px
            height 100%
            background-color #FFFFFF
            box-shadow 0 0 15px 0 rgba(0,0,0,0.15)
            border-radius 2px
            transition all 0.3s ease-in-out
            position relative
            overflow hidden
            .product-cell-content
              width 100%
              height 100%
              .product-info-content
                position absolute
                left 0
                right 0
                top 0
                bottom 0
                z-index 111
                padding 24px
                .icon-wrap
                  margin-top 96px
                  width 80px
                  height 80px
                  position relative
                  margin-left 94px
                  transition all 0.4s ease-in-out
                  img
                    position absolute
                    left 0
                    top 0
                    width 100%
                    height 100%
                .tit
                  width 100%
                  text-align center
                  margin-top 16px
                .txt
                  text-align center
                  margin-top 8px
                .btn
                  width 100px
                  height 36px
                  background-color #FFFFFF
                  color #01bbdd
                  font-size 14px
                  text-align center
                  line-height 36px
                  border-radius 4px
                  margin 24px auto 0 auto
                  cursor pointer
                  opacity 0
            .product-cell-content:before
              top auto
              bottom 0
              transition all 0.3s ease-in-out
              left 75px
              content ""
              position absolute
              width 75px
              height 0
              background-image linear-gradient(180deg, #5360fb 0%, #01bbdd 96%)
            .product-cell-content:after
              left 225px
              content ""
              transition all 0.3s ease-in-out
              position absolute
              top auto
              bottom 0
              width 75px
              height 0
              background-image linear-gradient(180deg, #5360fb 0%, #01bbdd 96%)
          .product-cell:before
            left 0
            content ""
            position absolute
            transition all 0.3s ease-in-out
            top 0
            width 75px
            height 0
            background-image linear-gradient(180deg, #5360fb 0%, #01bbdd 96%)
          .product-cell:after
            left 150px
            content ""
            position absolute
            transition all 0.3s ease-in-out
            top 0
            width 75px
            height 0
            background-image linear-gradient(180deg, #5360fb 0%, #01bbdd 96%)
          .product-cell:hover
            .product-cell-content:before,.product-cell-content:after
              height 420px
            .product-cell-content
              .product-info-content
                .icon-wrap
                  margin-top 64px
                .tit
                  color white
                .txt
                  color white
                .btn
                  opacity 1
          .product-cell:hover:before,.product-cell:hover:after
            height 420px
          .product-cell:active
            background-image linear-gradient(180deg, #5360fb 0%, #01bbdd 96%)
          .mar-r24
            margin-right 24px
        .product-view:after
          visibility hidden
          display block
          font-size 0
          content ""
          clear both
          height 0
    .statics-wrap
      width 100%
      position relative
      overflow hidden
      height 340px
      .statics-mask
        width 100%
        left 0
        top 0
        position absolute
        z-index 99
        background-image url('../../assets/images/cssBg/bg_statics.png')
        background-size cover
        height 340px
        filter blur(3px)
      .statics-content
        width 100%
        height 100%
        background-color rgba(0,0,0,0.5)
        left 0
        top 0
        z-index 100
        position absolute
        .statics-info-wrap
          margin 0 auto
          width 1040px
          position relative
          z-index 100
          .statics-view
            width 100%
            margin 0 auto
            .statics-cell
              width 230px
              height 90px
              padding 20px
              .number-wrap
                display block
                height 32px
                left 50%
                text-align center
                .number
                  font-weight 600
                  color white
                  font-size 28px
                  width 100%
                  font-family "Microsoft Sans Serif"
                  text-align center
              .txt
                font-size 14px
                color #999999
                width 100%
                text-align center
                margin-top 12px
            .mar-r40
              margin-right 40px
          .statics-view:after
            visibility hidden
            display block
            font-size 0
            content ""
            clear both
            height 0
    .solution-wrap
      width 100%
      position relative
      overflow hidden
      background-color #242933
      .solution-content
        width 1280px
        margin 0 auto 40px auto
        .solution-view
          width 100%
          height 480px
          .solution-cell
            width 220px
            height 216px
            margin-bottom 24px
            padding-left 12px
            padding-right 12px
            .solution-cell-view
              width 100%
              height 100%
              padding 8px
              border-radius 4px
              cursor pointer
              background-image linear-gradient(179deg,#292f3b 2%,#242933)
              box-shadow 8px 8px 20px 0 rgb(18 21 26 / 60%)
              .icon-wrap
                margin-top 12px
                width 48px
                height 48px
                margin-left calc(50% - 24px)
                img
                  width 100%
                  height 100%
              .tit
                width 100%
                text-align center
                margin-top 8px
                margin-bottom 8px
              .txt
                width 100%
                text-align center
                color rgba(255,255,255,0.6)
          .solution-cell:hover
            width 400px
            height 456px
            transition all 0.3s ease-in-out
    .customer-wrap
      width 100%
      position relative
      overflow hidden
      .customer-content
        margin 60px auto 0 auto
        width 1280px
        .tabs-view
          width 1188px
          margin 0 auto
          height 113px
          position relative
          .tab-cell
            width 108px
            float left
            height 113px
            cursor pointer
            position relative
            .box-wrap
              width 64px
              height 64px
              margin-left 22px
              border-radius 32px
              position relative
              border 1px solid transparent
              overflow hidden
              .icon-wraps
                width 34px
                height 34px
                margin-left 15px
                margin-top 15px
                transition all 0.3s ease-in-out
                img
                  width 100%
                  height 100%
                  position relative
                  left 50%
                  top 50%
                  transform translate(-50%,-50%)
            .box-text
              margin-top 13px
              font-size 18px
              font-family "PingFang SC"
              width 100%
              text-align center
              color #181818
              font-weight 500
              line-height 36px
          .tab-cell-active
            .box-wrap
              background #FFFFFF
              border 1px solid #4169E1
              box-shadow 0 8px 6px 1px rgba(69,114,255,0.08)
              .icon-wraps
                transition all 0.3s ease-in-out
                transform scale(1.2)
            .box-text
              color #4169E1
          .tab-line
            width 72px
            height 1px
            margin-top 32px
            float left
            background transparent
        .customer-view
          width 1280px
          height 400px
          margin 16px auto 60px auto
          overflow hidden
          .customer-view-cell
            width 100%
            height 100%
            overflow hidden
            position relative
            .left-view
              width 720px
              height 400px
              .cover-wrap
                width 100%
                height 300px
                overflow hidden
                img
                  width auto
                  //height 300px 图没切好，先高用305px cover住
                  height 305px
              .logo-wrap
                width 100%
                height 100px
                background-color white
                .img-wrap
                  width 33.33%
                  position relative
                  height 100%
                  img
                    width auto
                    height 50%
                    position absolute
                    left 50%
                    top 50%
                    transform translate(-50%,-50%)
                .br
                  border-right 1px solid #efefef
            .right-view
              width 560px
              height 400px
              position relative
              overflow hidden
              background-image linear-gradient(120deg, #5360fb 0%, #01bbdd  96%)
              .info-wrap
                position absolute
                top 50%
                left 0
                width 100%
                transform translateY(-50%)
                padding 32px
                .quotation
                  font-size 80px
                  line-height 64px
                  min-width 66px
                .words
                  font-size 16px
                  line-height 30px
                  margin-left 66px
                  font-family "PingFang SC"
                  text-align justify
                .name-wrap
                  height 28px
                  margin-top 48px
                  width 100%
                  .speaker
                    font-size 16px
                    line-height 28px
                    height 28px
                    font-weight 600
                    font-family "PingFang SC"
                  .name
                    font-size 16px
                    line-height 28px
                    height 28px
                  .line
                    width 36px
                    background-color white
                    height 1px
                    margin-top 13.5px
          .customer-view-cell:after
            visibility hidden
            display block
            font-size 0
            content ""
            clear both
            height 0
    .logo-view-wrap
      width 100%
      position relative
      overflow hidden
      background-color white
      .logo-view-content
        margin 60px auto
        width 1280px
        .logo-cell-wrap
          width 193.33px
          height 68px
          position relative
          transition transform 0.3s ease-in-out
          img
            width auto
            height 70%
            position absolute
            left 50%
            top 50%
            transform translate(-50%,-50%)
        .mar-r24
          margin-right 24px
        .mar-b24
          margin-bottom 24px
      .logo-view-content:after
        visibility hidden
        display block
        font-size 0
        content ""
        clear both
        height 0
