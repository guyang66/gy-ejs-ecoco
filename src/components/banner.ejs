<!-- banner-wrap -->
<div class="banner-wrap" style="<%=bannerData.style%>">
  <div class="banner-content">
    <div class="banner-txt-wrap fn-left">
      <p class="title"><%= bannerData.title %></p>
      <p class="txt"><%= bannerData.text %></p>
      <% if(bannerData.button) { %>
        <p class="button">查看详情</p>
      <% } %>
    </div>

    <% if(bannerData.hasFigure) { %>
      <div class="banner-figure-wrap fn-right">
        <img src="<%=bannerData.figure%>" style="width: <%=bannerData.figureWidth%>px;height: <%=bannerData.figureHeight%>px"/>
      </div>
    <% } %>
  </div>
</div>
