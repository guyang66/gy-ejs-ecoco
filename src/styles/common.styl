.transition-hide-bottom
  opacity 0
  transform translate(0px, 100px)
  transition all 1s ease-in-out
  visibility hidden
.transition-hide
  opacity 0
  transition all 1s ease-in-out
.transition-fade-in
  opacity 1
  transform translate(0px, 0px)
  transition all 1s ease-in-out
  visibility visible

.p-absolute
  position absolute
  left 0
  right 0
  top 0
  bottom 0

.box-shadow-1
