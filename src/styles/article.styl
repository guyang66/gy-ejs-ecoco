.module-article-crumbs
  width 100%
  margin-bottom 32px
  font-size 14px
  font-weight 400
  color #181818
  a
    color #666666
    cursor pointer
.module-article-main-view
  background-color #ffffff
  width 100%
  position relative
  min-height 200px
  padding-bottom 60px
  strong
    color #181818
  .info-view
    width 880px
    .main-icon
      width 60px
      height 60px
    .main-title
      font-size 28px
      color #181818
      height 60px
      font-family "PingFang SC"
      line-height 60px
      font-weight 600
    .main-img-wrap
      width 100%
      height auto
      overflow hidden
      img
        width 100%
        height 100%
    .desc-bar
      width 100%
      background-color #e3efff
      height 10px
    .main-desc
      font-size 14px
      color #5b5b5b
      padding 20px
      border 1px solid #3e3e3e
      width calc(100% - 48px)
      margin-left 24px
      line-height 28px
      text-align justify
      letter-spacing 1px
      font-family PingFangSC-light
      box-sizing border-box
    .slice-line
      width 100%
      height 2px
      background-color #e7e7e7
    .title-text-item
      width calc(100% - 36px)
      height 48px
      line-height 48px
      color #181818
      font-family "PingFang SC"
      font-weight 500
      font-size 18px
    .title-normal-item
      width calc(100% - 36px)
      padding-left 12px
      padding-right 24px
      height 48px
      line-height 48px
      background-color #e3efff
      color #181818
      display inline-block
      font-size 18px
      font-family PingFangSC-light
      font-weight bold
      font-style italic
    .list-item
      font-size 14px
      margin-left 32px
      line-height 28px
      color #5b5b5b
    .info-item
      .img-item
        width 100%
        height auto
        img
          width 100%
          height 100%
      .normal-text-item
        font-size 14px
        color #444444
        line-height 28px
        text-align justify
        letter-spacing 1px
        box-sizing border-box
      .text-item
        font-size 14px
        color #5b5b5b
        line-height 28px
        text-align justify
        letter-spacing 1px
        font-family PingFangSC-light
        box-sizing border-box
  .side-view
    width 360px
    min-height 200px
    border-radius 2px
    .title
      color #181818
      font-family PingFangSC-light
      font-weight bold
      font-size 16px
    .desc
      color #999999
      font-size 16px
      line-height 24px
      text-align justify
    .status-finish
      display block
      cursor pointer
      height 40px
      color #333333
      font-size 16px
      background-color #eeeeee
      text-align center
      line-height 40px
      border-radius 2px
    .status-start
      width 100%
      display block
      cursor pointer
      height 40px
      color #FFFFFF
      font-size 16px
      background-color #67c23a
      text-align center
      line-height 40px
      border-radius 2px
    .text
      color #333333
      font-size 16px
      line-height 24px
      text-align justify
    .product-item
      width calc(100% - 24px)
      border 1px solid #4169E1
      padding 6px 12px
      display inline-block
      transition all 0.3s ease-in-out
      border-radius 2px
      position relative
      cursor pointer
      overflow hidden
      .icon-img
        width 30px
        height 30px
        transition all 0.3s ease-in-out
        margin-top 3px
      .title
        margin-left 12px
        height 36px
        line-height 36px
        font-family PingFangSC-light
        transition all 0.3s ease-in-out
        color #666666
        font-size 14px
      .mar-l48
        margin-left 48px
      .arrow-img
        width 32px
        height 32px
        position absolute
        transition all 0.3s ease-in-out
        display none
        right 12px
        top 6px
    .product-item:hover
      background-image linear-gradient(90deg, rgb(83, 96, 251) 0%, rgb(1, 187, 221) 96%)
      transition all 0.3s ease-in-out
      border 1px solid transparent
      .icon-img
        display none
        transition all 0.3s ease-in-out
      .title
        margin-left 12px
        color white
        transition all 0.3s ease-in-out
      .arrow-img
        display block
.module-article-main-view:after
  visibility hidden
  display block
  font-size 0
  content ""
  clear both
  height 0
.article-render-box
  .title
    font-size 24px
    color #333333
    font-weight 500
    line-height 40px
    margin-top 16px
  .info-wrap
    width 100%
    height 24px
    display block
    margin-top 6px
    margin-bottom 6px
    .icon
      width 18px
      margin-top 3px
      height 18px
    .author,.date,.tag
      font-size 14px
      color #787878
      line-height 24px
    .line-h
      width 1px
      height 16px
      margin-top 4px
      margin-left 24px
      margin-right 24px
      background-color rgb(229,230,235)
  .info-wrap:after
    visibility hidden
    display block
    font-size 0
    content ""
    clear both
    height 0
  .a-tag-view
    display block
    height 24px
    margin-bottom 8px
    margin-top 5px
    .tag-cell
      padding-left 8px
      padding-right 8px
      height 20px
      display inline-block
      text-align center
      background-color #e8effe
      border-radius 2px
      color #4169E1
      font-size 12px
      line-height 20px
      margin-top 2px
      margin-right 12px
  .a-tag-view:after
    visibility hidden
    display block
    font-size 0
    content ""
    clear both
    height 0
  .detail-view
    .article
      width 100%
      font-size 16px
      color #787878
      line-height 28px
      p
        margin-bottom 30px
      img
        width 100%
        height auto
      a
        color #4169E1
        text-decoration underline
  .line
    width 100%
    height 1px
    background-color rgb(229,230,235)
    margin-top 20px
    margin-bottom 20px
  .relative-link
    font-size 16px
    color #181818
    display block
    line-height 32px
  .relative-link:hover
    color #4169E1
    text-decoration underline
  .back-btn
    font-size 14px
    padding-left 16px
    padding-right 16px
    border-radius 2px
    color #ffffff
    cursor pointer
    display inline-block
    text-align center
    height 32px
    line-height 32px
    margin-top 20px
    background-image linear-gradient(90deg, #5360fb 0%, #01bbdd  96%)
