@import '@/styles/global'
@import '@/styles/component'
.main-layout
  position relative
  width 100%

  // header模块
  .header-wrap
    height 64px
    line-height 64px
    background #242424
    box-shadow 0 2px 4px rgba(0,21,41,.08)
    border-bottom 1px solid rgba(255, 255, 255, 0.1)
    .header-content
      overflow hidden
      width 1280px
      margin 0 auto
      img
        vertical-align middle
        height height-logo
      .header-nav
        position relative
        overflow hidden
        left 52px
        li
          position relative
          float left
          &.active
            a
              opacity 1
            span
              opacity 1
          &:hover
            a
              opacity 1
            span
              opacity 1
        a
          display block
          padding 0 30px
          font-size 14px
          color #FFF
          opacity 0.7
          transition all .3s
        span
          display block
          position absolute
          left 30px
          bottom 1px
          width calc(100% - 60px)
          height 2px
          background #b8f1ed
          opacity 0
          transition all .3s
      .tel
        color #fff
        font-size 14px
        img
          width 18px
          height 18px
          margin-right 8px
