.banner-wrap
  width 100%
  height 380px
  background #242424
  .banner-content
    position relative
    overflow hidden
    width 1280px
    margin 0 auto
    height 100%
    .banner-txt-wrap
      width 600px
      height 100%
      .title
        padding-top 64px
        line-height 56px
        font-size 38px
        color #fff
      .txt
        padding-top 16px
        line-height 28px
        font-size 16px
        color: #fff
        opacity 0.85
      .button
        margin-top 36px
        width 108px
        height 36px
        line-height 36px
        font-size 14px
        text-align center
        color #fff
        //background linear-gradient(315deg,#01ebdd %,#5360fb 74.07%)
        background-image linear-gradient(90deg, #5360fb 0%, #01bbdd  96%)
        cursor pointer
.tabs-wrap
  position relative
  overflow hidden
  width 100%
  height 50px
  background #FFFFFF
  box-shadow 0 4px 10px 0 #EBEDF6
  z-index 200
  .tabs-content
    overflow hidden
    width 1280px
    height 100%
    margin 0 auto
    li
      position relative
      float left
      &.active
        a
          color #374567
        span
          opacity 1
      &:hover
        a
          color #374567
        span
          opacity 1
    a
      display block
      padding-right 50px
      font-size 16px
      line-height 50px
      color #7A8BA6
      transition all .3s
    span
      display block
      position absolute
      bottom 0
      width calc(100% - 50px)
      height 2px
      background-image linear-gradient(90deg, #1E90FF  0%, #4169E1 100%)
      text-indent -999
      opacity 0
      transition all .3s
