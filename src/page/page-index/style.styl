                  transition all 0.5s ease-in-out
                  display inline-block
                  position absolute
                  left 32px
                  bottom 32px
              .tr
                .tit
                  transition all 0.5s ease-in-out
                  opacity 0
                .desc
                  opacity 0
                  transition all 0.5s ease-in-out
                .tag-view
                  opacity 0
                  transition all 0.5s ease-in-out
                .btn
                  opacity 0
                  transition all 0.5s ease-in-out
          .solution-cell:hover
            transition all 0.3s ease-in-out
            .solution-cell-view
              .icon-wrap
                transition all 0.3s ease-in-out
              .name
                transition all 0.3s ease-in-out
              .tit
                transition all 0.3s ease-in-out
