            width 1280px
            position relative
            height 535px
            margin 0 auto
            .main-title
              width 100%
              text-align left
              font-weight 500
              font-size 40px
              color #FFFFFF
              line-height 56px
              padding-top 120px
            .banner-black
              color #374567
            .desc-item-wrap
              margin-top 16px
