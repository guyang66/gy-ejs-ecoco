              height 28px
              line-height 28px
              display inline-block
              width 100%
              text-align center
            .desc
              margin-top 6px
              width 100%
              text-align center
              font-size 14px
          .column-cell:hover
            display block
            background-image linear-gradient(90deg, #5360fb 0%, #01bbdd  96%)
    .product-wrap
      width 100%
      position relative
      overflow hidden
      background-color #ffffff
      .product-content
        margin 0 auto 40px auto
        width 1280px
        position relative
        .more-btn
          width 108px
          height 36px
          margin 0 auto
          color #01bbdd
          border-radius 2px
          font-size 14px
          text-align center
          line-height 36px
          border 1px solid #01bbdd
          margin-top 24px
          display block
          cursor pointer
        .product-view
          height 420px
          width 948px
          margin 0 auto 20px auto
          position relative
          .product-cell
            width 300px
            height 100%
            background-color #FFFFFF
            box-shadow 0 0 15px 0 rgba(0,0,0,0.15)
            border-radius 2px
            transition all 0.3s ease-in-out
            position relative
            overflow hidden
            .product-cell-content
              width 100%
              height 100%
              .product-info-content
                position absolute
                left 0
                right 0
                top 0
                bottom 0
                z-index 111
                padding 24px
                .icon-wrap
                  width 80px
                  height 80px
                  position relative
                  margin 96px auto 0 auto
                  transition all 0.4s ease-in-out
                  img
                    position absolute
                    left 0
                    top 0
                    width 100%
                    height 100%
                .tit
                  width 100%
                  text-align center
                  margin-top 16px
                .txt
                  text-align center
                  margin-top 8px
                .btn
                  width 100px
                  height 36px
                  background-color #FFFFFF
                  color #01bbdd
                  font-size 14px
                  text-align center
                  line-height 36px
                  border-radius 4px
                  margin 24px auto 0 auto
                  cursor pointer
                  opacity 0
            .product-cell-content:before
              top auto
              bottom 0
              transition all 0.3s ease-in-out
              left 75px
              content ""
              position absolute
              width 75px
              height 0
              background-image linear-gradient(180deg, #5360fb 0%, #01bbdd 96%)
            .product-cell-content:after
              left 225px
              content ""
              transition all 0.3s ease-in-out
              position absolute
              top auto
              bottom 0
              width 75px
              height 0
              background-image linear-gradient(180deg, #5360fb 0%, #01bbdd 96%)
          .product-cell:before
            left 0
            content ""
            position absolute
            transition all 0.3s ease-in-out
            top 0
            width 75px
            height 0
            background-image linear-gradient(180deg, #5360fb 0%, #01bbdd 96%)
          .product-cell:after
            left 150px
            content ""
            position absolute
            transition all 0.3s ease-in-out
            top 0
            width 75px
            height 0
            background-image linear-gradient(180deg, #5360fb 0%, #01bbdd 96%)
          .product-cell:hover
            .product-cell-content:before,.product-cell-content:after
              height 420px
            .product-cell-content
              .product-info-content
                .icon-wrap
                  margin-top 64px
                .tit
                  color white
                .txt
                  color white
                .btn
                  opacity 1
          .product-cell:hover:before,.product-cell:hover:after
            height 420px
          .product-cell:active
            background-image linear-gradient(180deg, #5360fb 0%, #01bbdd 96%)
        .product-view:after
          visibility hidden
          display block
          font-size 0
          content ""
          clear both
          height 0
