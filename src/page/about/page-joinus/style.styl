@import "@/styles/layout.styl";
@import 'swiper/dist/css/swiper.css';
.join-main-wrap
  width: 100%
  position relative
  .join-wrap
    width 100%
    background #FFFFFF
    overflow hidden
    position relative
    .join-content
      width 1280px
      margin 0 auto
      position relative
      .join-view
        width 100%
        margin-top 80px
        margin-bottom 40px
        .col-cell
          width 100%
          margin-bottom 9px
          height calc(82px + 54px + 12px)
          .block-view
            height 82px
          .item-cell
            width calc(1196px / 7)
            margin-left 6px
            margin-right 6px
            height 82px
            position relative
            .top
              position absolute
              top -54px
              border-right calc(1196px / 14) solid transparent
              border-bottom 54px solid #f4f4f4
              border-left calc(1196px / 14) solid transparent
              width 0
              height 0
            .bottom
              position absolute
              bottom -54px
              border-right calc(1196px / 14) solid transparent
              border-top 54px solid #f4f4f4
              border-left calc(1196px / 14) solid transparent
              width 0
              height 0
            .content-img-wrap
              width calc(1196px / 7)
              height 196px
              position absolute
              top -54px
              overflow hidden
              transform: rotate(-60deg) skewY(30deg) translateZ(22px);
              .img-content
                width 100%
                height 100%
                overflow hidden
                transform: skewY(-30deg) rotate(60deg);
                img
                  width 100%
                  height auto
  .welfare-wrap
    width 100%
    background #F4F4F4
    overflow hidden
    position relative
    .welfare-content
      width 1280px
      margin 0 auto
      position relative
      .welfare-view
        width 100%
        margin-bottom 60px
        .welfare-cell
          width 100%
          height 360px
          .img
            width 540px
            height 100%
          .info-wrap
            width calc(100% - 540px)
            height 100%
            background-color #FFFFFF
            padding 36px
            .icon-wrap
              width 88px
              height 88px
            .text-wrap
              width 100%
              height 100%
              .text-inner-wrap
                width calc(100% - 80px)
                height 100%
                position relative
                .mask-view
                  background-color #4169E1
                  position absolute
                  left 32px
                  top 32px
                  width calc(100% - 64px)
                  height calc(100% - 64px)
                  z-index 1
                  opacity 0.3
                .info-view
                  z-index 10
                  position absolute
                  left 0
                  right 0
                  width 100%
                  height 100%
                  padding 32px 32px 32px 64px
                  .title
                    font-size 18px
                    font-weight 500
                    color #181818
                    font-family "PingFang SC"
                    line-height 28px
                    margin-top 32px
                    margin-bottom 12px
                  .desc
                    color #444444
                    font-size 14px
                    line-height 24px
                    text-align justify
              .mar-l88
                margin-left 88px
  .resume-wrap
    width 100%
    background #FFFFFF
    overflow hidden
    position relative
    .resume-content
      width 1280px
      margin 0 auto
      position relative
      .resume-view
        margin-bottom 60px
        width 100%
        position relative
        .tab-view
          width 480px
          background-color #f3f3f3
          height 44px
          margin 0 auto 30px auto
          overflow hidden
          position relative
          border-radius 22px
          .tab-cell
            width 160px
            text-align center
            line-height 44px
            cursor pointer
            height 44px
            color #444444
            font-size 16px
          .active
            color #ffffff
            background-image linear-gradient(90deg, #5360fb 0%, #01bbdd  96%)
        .tag-view
          width 100%
          height 36px
          .tit
            color #181818
            font-family "PingFang SC"
            font-weight 600
            line-height 36px
            font-size 16px
            height 36px
          .itm
            color #444444
            cursor pointer
            font-size 14px
            line-height 36px
            height 36px
            padding-left 20px
            padding-right 20px
            display inline-block
            border-radius 4px
          .active
            background-image linear-gradient(90deg, #5360fb 0%, #01bbdd  96%)
            color #ffffff
        .empty-view
          width 100%
          //height 300px
          overflow hidden
          position relative
          img
            margin 0 auto
            display block
            height 300px
            width auto
          .empty-text
            font-size 16px
            color #999999
            width 100%
            text-align center
        .content-view
          width 100%
          overflow hidden
          background #ffffff
          .resume-cell
            width 100%
            min-height 100px
            padding 32px
            border 1px solid #e1e6f0
            transition all 0.3s ease-in-out
            position relative
            .title
              height 28px
              font-weight bold
              .text
                font-size 16px
                height 28px
                display inline-block
                line-height 28px
              .tag-span
                width 28px
                font-weight normal
                height 100%
                background #ff6b6b
                color #ffffff
                text-align center
                line-height 28px
                margin-right 4px
                display inline-block
            .desc,.date
              color #787878
              font-size 14px
              line-height 26px
              white-space nowrap
            .expand-btn
              position absolute
              top 50%
              transform translateY(-50%)
              width 32px
              height 32px
              right 64px
              opacity 1
              cursor pointer
              transition all 0.3s ease-in-out
              img
                width 100%
                height 100%
            .expand-wrap
              width 100%
              display none
              .btn
                width 100px
                height 36px
                background-image linear-gradient(90deg, #5360fb 0%, #01bbdd  96%)
                color #FFFFFF
                text-align center
                line-height 36px
                border-radius 2px
                font-size 14px
                cursor pointer
              .line
                width 100%
                height 1px
                background #f4f5f4
              .department
                font-size 16px
                color #333333
                font-weight bold
                .seq
                  margin-left 8px
                  margin-right 8px
                  color #787878
              .info-wrap
                width 100%
                height 28px
                span
                  font-size 14px
                  color #787878
                  line-height 28px
                .seq
                  margin-left 8px
                  margin-right 8px
                  color #787878
              .tit
                font-size 16px
                color #444444
                line-height 28px
              .item
                font-size 14px
                color #666666
                line-height 24px
              .email
                font-size 14px
                color #666666
                line-height 24px
          .resume-cell:hover
            box-shadow 0 0 14px 0 rgba(0,0,0,0.15)
            transition all 0.3s ease-in-out



