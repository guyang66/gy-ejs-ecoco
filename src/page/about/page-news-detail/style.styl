@import "@/styles/layout.styl";
@import 'swiper/dist/css/swiper.css';
.news-detail-wrap
  .news-wrap
    width 100%
    background rgb(246,247,249)
    overflow hidden
    position relative
    .news-content
      width 1280px
      margin 0 auto
      position relative
      .news-box
        width 880px
        overflow hidden
        margin-bottom 60px
        .main-content
          background-color #FFFFFF
          padding 24px
      .right-wrap
        margin-top 73px
        width 360px
        min-height 30px
        .search-view
          width 100%
          padding 24px
          background-color #ffffff
          .tit
            color #181818
            font-family "PingFang SC"
            font-size 16px
            line-height 28px
          .search
            position relative
            width 318px
            height 46px
            margin 0 auto
            margin-top 15px
            .input
              display block
              width 100%
              height 100%
              padding 0 10px
              font-size 14px
              border 1px solid #DEE4F4
              background none
              outline none
            .icon
              position absolute
              top 0
              right 0
              width 46px
              height 46px
              cursor pointer
              background-image linear-gradient(90deg, rgb(83, 96, 251) 0%, rgb(1, 187, 221) 96%)
              img
                display block
                width 24px
                height 24px
                margin 11px
          .search-text
            margin-top 10px
            height 32px
            font-size 14px
            color #333333
            line-height 32px
            .search-item
              margin-right 8px
              color #666666
              cursor pointer
            .search-item:hover
              text-decoration underline
              color #4169E1
        .tag-view
          width 100%
          padding 24px
          background-color #ffffff
          .tit
            color #181818
            font-family "PingFang SC"
            font-size 16px
            line-height 28px
          .tag-item
            display inline-block
            padding 7px 15px
            margin-top 15px
            margin-right 15px
            background #4169E1
            border-radius 2px
            font-size 14px
            color #ffffff
            cursor pointer
        .news-link-view
          width 100%
          padding 24px
          background-color #ffffff
          margin-top 20px
          .tit
            color #181818
            font-family "PingFang SC"
            font-size 16px
            line-height 28px
          .news-item-wrap
            display inline-block
            .point
              width 6px
              height 6px
              background-image linear-gradient(45deg, #5360fb 55%, #01bbdd  79%)
              margin-top 10px
              border-radius 3px
            .news-item
              width calc(100% - 16px)
              font-size 14px
              line-height 26px
              margin-left 10px
              color #333333
              cursor pointer
              display inline-block
            .news-item:hover
              color #4169E1
              text-decoration underline
