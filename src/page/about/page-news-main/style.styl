@import "@/styles/layout.styl";
@import 'swiper/dist/css/swiper.css';
.news-main-wrap
  100%
  .news-wrap
    width 100%
    background rgb(246,247,249)
    overflow hidden
    position relative
    .news-content
      width 1280px
      margin 0 auto
      position relative
      .news-view
        width 100%
        margin-top 60px
        margin-bottom 40px
        min-height 200px
        .left-wrap
          width 880px
          min-height 50px
          .tabs-view
            width 100%
            height 48px
            background-color #ffffff
            padding 0 12px
            .text-wrap
              height 46px
              width 100%
              .tab-cell
                cursor pointer
                margin-left 12px
                margin-right 12px
                padding 0 6px
                font-size 14px
                height 46px
                line-height 46px
                color #1d2129
            .tab-line
              width 40px
              left 24px
              position absolute
              top 46px
              background-color #4169E1
              height 2px
              transition all 0.3s ease-in-out
          .article-view
            margin-top 6px
            width 100%
            background-color #ffffff
            padding 24px
            margin-bottom 60px
            .article-item
              width 100%
              position relative
              .tit
                color #181818
                font-size 18px
                line-height 32px
                font-family "PingFang SC"
                font-weight 500
                text-overflow ellipsis
                max-height 32px
                overflow hidden
                white-space nowrap
                a
                  cursor pointer
                  color #181818
                .tag
                  padding-left 8px
                  padding-right 8px
                  height 20px
                  display inline-block
                  text-align center
                  background-color #e8effe
                  border-radius 2px
                  color #4169E1
                  font-size 12px
                  line-height 20px
                  margin-left 12px
              .desc
                font-size 14px
                color #787878
                line-height 26px
                height 54px
                display -webkit-box
                -webkit-line-clamp 2
                -webkit-box-orient vertical
                text-overflow ellipsis
                text-align justify
                overflow hidden
              .w-small
                width calc(100% - 125px - 34px)
              .wrap
                width 100%
                height 24px
                margin-top 6px
                margin-bottom 6px
                .icon
                  width 18px
                  margin-top 3px
                  height 18px
                .author,.date,.tag
                  font-size 14px
                  color #787878
                  line-height 24px
                .line
                  width 1px
                  height 16px
                  margin-top 4px
                  margin-left 24px
                  margin-right 24px
                  background-color rgb(229,230,235)
              .cover-wrap
                position absolute
                width 115px
                height 115px
                top 36px
                right 0
                img
                  height 100%
                  width 100%
              .btn
                margin-top 6px
                color #4169E1
                font-size 14px
                cursor pointer
                display inline-block
              .btn:hover
                text-decoration underline
              .seq-line
                height 1px
                width 100%
                background-color #e6e8eb
                margin 24px 0
        .right-wrap
          width 360px
          min-height 30px
          .search-view
            width 100%
            padding 24px
            background-color #ffffff
            .tit
              color #181818
              font-family "PingFang SC"
              font-size 16px
              line-height 28px
            .search
              position relative
              width 318px
              height 46px
              margin 0 auto
              margin-top 15px
              .input
                display block
                width 100%
                height 100%
                padding 0 10px
                font-size 14px
                border 1px solid #DEE4F4
                background none
                outline none
              .icon
                position absolute
                top 0
                right 0
                width 46px
                height 46px
                cursor pointer
                background-image linear-gradient(90deg, rgb(83, 96, 251) 0%, rgb(1, 187, 221) 96%)
                img
                  display block
                  width 24px
                  height 24px
                  margin 11px
            .search-text
              margin-top 10px
              height 32px
              font-size 14px
              color #333333
              line-height 32px
              .search-item
                margin-right 8px
                color #666666
                cursor pointer
              .search-item:hover
                text-decoration underline
                color #4169E1
          .tag-view
            width 100%
            padding 24px
            background-color #ffffff
            margin-top 20px
            .tit
              color #181818
              font-family "PingFang SC"
              font-size 16px
              line-height 28px
            .tag-item
              display inline-block
              padding 7px 15px
              margin-top 15px
              margin-right 15px
              background #4169E1
              border-radius 2px
              font-size 14px
              color #ffffff
              cursor pointer
          .news-link-view
            width 100%
            padding 24px
            background-color #ffffff
            margin-top 20px
            .tit
              color #181818
              font-family "PingFang SC"
              font-size 16px
              line-height 28px
            .news-item-wrap
              display inline-block
              .point
                width 6px
                height 6px
                background-image linear-gradient(90deg, #5360fb 55%, #01bbdd  79%)
                margin-top 10px
                border-radius 3px
              .news-item
                width calc(100% - 16px)
                font-size 14px
                line-height 26px
                margin-left 10px
                color #333333
                cursor pointer
                display inline-block
              .news-item:hover
                color #4169E1
                text-decoration underline
