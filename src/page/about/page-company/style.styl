@import "@/styles/layout.styl";
@import 'swiper/dist/css/swiper.css';
.company-main-wrap
  width 100%
  position relative
  .us-wrap
    width 100%
    background #ffffff
    overflow hidden
    position relative
    //background-image url('../../../assets/images/cssBg/bg_us.png')
    //background-size 100% 100%
    .us-content
      width 1280px
      margin 0 auto
      position relative
      .us-view
        width 100%
        margin-top 60px
        margin-bottom 40px
        .main-text
          font-size 16px
          line-height 28px
          color #808080
          text-align justify
  .team-wrap
    width 100%
    background #FFFFFF
    overflow hidden
    position relative
    .team-content
      width 1280px
      margin 0 auto
      position relative
      .team-view
        width 100%
        margin-top 60px
        margin-bottom 40px
        .team-cell
          width 400px
          min-height 530px
          transition all 0.3s ease-in-out
          padding 32px
          position relative
          overflow hidden
          border-radius 5px
          .icon
            width 220px
            height 220px
            margin-top 20px
            display block
            margin-left 50%
            transform translateX(-50%)
          .title
            font-size 16px
            line-height 64px
            text-align center
            color #181818
            font-weight 500
            font-family "PingFang SC"
          .desc
            font-size 14px
            line-height 26px
            color #444444
            text-align justify
        .team-cell:hover
          box-shadow 0 0 14px 0 rgba(0,0,0,0.15)
          transition all 0.3s ease-in-out
      .team-view:after
        visibility hidden
        display block
        font-size 0
        content ""
        clear both
        height 0
  .value-wrap
    width 100%
    background #FFFFFF
    overflow hidden
    position relative
    .value-content
      width 1280px
      margin 0 auto
      position relative
      .value-view
        width 100%
        margin-top 60px
        margin-bottom 40px
        .value-cell
          width 400px
          padding 32px
          .title-wrap
            width 102px
            height 102px
            border-radius 51px
            text-align center
            line-height 102px
            font-size 16px
            color #ffffff
            margin-left 50%
            transform translateX(-50%)
            margin-bottom 16px
          .text-wrap
            height 36px
            transform translateX(20%)
            .icon
              width 24px
              margin-top 6px
              height 24px
            .text
              margin-left 36px
              font-size 14px
              color #444444
              line-height 36px
      .value-view:after
        visibility hidden
        display block
        font-size 0
        content ""
        clear both
        height 0
  .life-wrap
    width 100%
    background #FFFFFF
    overflow hidden
    position relative
    .life-content
      width 1280px
      margin 0 auto
      position relative
      .life-view
        width 100%
        margin-top 60px
        .life-cell
          width 100%
          min-height 450px
          margin-bottom 80px
          .info-wrap
            width calc(100% - 800px - 80px)
            height 450px
            position relative
            padding 12px
            .order
              position absolute
              top -40px
              left 0
              line-height 88px
              font-size 88px
              font-family "PingFang SC"
              font-weight bold
              color #eeeeee
            .title
              font-family "PingFang SC"
              color #181818
              font-weight 500
              font-size 36px
              max-width 250px
              line-height 48px
            .line
              background-color #eeeeee
              width 100%
              height 1px
              margin-top 30px
              margin-bottom 24px
            .tit
              margin-top 16px
              color #181818
              font-weight bold
              font-family "PingFang SC"
              font-size 16px
              line-height 28px
            .txt
              font-size 14px
              text-align justify
              line-height 26px
              color #444444
          .img-wrap
            width 800px
            height 450px
            border-radius 20px
  .history-wrap
    width 100%
    background #FFFFFF
    overflow hidden
    position relative
    .history-content
      width 1280px
      margin 0 auto
      position relative
      .history-view
        width 100%
        margin-bottom 40px
        position relative
        .tabs-wrap-view
          width 100%
          height 30px
          margin-left 50%
          .tabs-view
            height 30px
            width auto
            display inline-block
            transform translateX(-50%)
            .tab-cell
              height 30px
              padding-left 36px
              padding-right 36px
              cursor pointer
              border-radius 20px
              text-align center
              line-height 30px
              margin-right 36px
              //background-image linear-gradient(90deg, #5360fb 0%, #01bbdd  96%)
              //color #ffffff
              background-color #f3f3f3
              font-size 16px
              color #666666
            .active
              background-image linear-gradient(90deg, #5360fb 0%, #01bbdd  96%)
              color #ffffff
        .content-view
          width 100%
          margin-top 40px
          min-height 500px
          .title-wrap
            width 100%
            .item-cell
              position relative
              background-color #ffffff
              min-height 500px
              width 100%
              .item-left
                width 660px
                height 100%
                position relative
                .item-left-cell
                  position relative
                  .tit
                    font-size 16px
                    color #181818
                    line-height 32px
                    width calc(100% - 80px)
                    margin-left 20px
                    text-align right
                  .date
                    text-align right
                    margin-left 20px
                    width calc(100% - 80px)
                    line-height 32px
                    color #666666
                  .list-wrap
                    width 40px
                    position absolute
                    top 0
                    right 0
                    height 100%
                    .point
                      width 6px
                      height 6px
                      border-radius 3px
                      background-color #eeeeee
                      position absolute
                      top 50%
                      transform translateY(-50%)
                      left 16px
                    .line
                      width 0
                      height 100%
                      border-right 1px dashed #eeeeee
                      margin-left 19px
                .item-right
                  display none
                  position absolute
                  background-color #ffffff
                  top 0
                  left 660px
                  width 620px
                  min-height  500px
                  padding 20px
                  .desc
                    font-size 14px
                    line-height 24px
                    color #666666
                  .img
                    width 100%
                    height auto
                .item-left-cell:hover,.item-left-cell-active
                  .tit
                    color #4169E1
                  .date
                    color #4169E1
                  .list-wrap
                    .point
                      background #4169E1
                    .line
                      border-right 1px dashed rgba(65,105,225,0.6)
        .content-view:after
          visibility hidden
          display block
          font-size 0
          content ""
          clear both
          height 0
  .prize-wrap
    width 100%
    background #FFFFFF
    overflow hidden
    position relative
    .prize-content
      width 1280px
      margin 0 auto
      position relative
      .prize-view
        width 100%
        margin-bottom 60px
        position relative
        height 340px
        .content-view
          width 1160px
          height 100%
          overflow hidden
          .prize-cell
            width 100%
            height 100%
            .prize-item
              width 250px
              height 100%
              margin-left 20px
              margin-right 20px
              border 1px solid #eeeeee
              .icon
                width 100%
                height calc(100% - 48px)
                display block
                background-color rgba(12,12,12,0.1)
              .text
                line-height 48px
                font-size 12px
                padding-left 12px
                padding-right 12px
                width 100%
                color #444444
                text-align center
        .arrow
          width 60px
          height 100%
          position relative
          .arrow-img
            width 32px
            height 32px
            margin-top calc(170px - 16px)
            display block
            cursor pointer
            margin-left 12px
