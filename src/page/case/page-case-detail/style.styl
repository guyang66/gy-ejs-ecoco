@import "@/styles/layout.styl";
@import 'swiper/dist/css/swiper.css';
.case-detail-wrap
  width 100%
  background #ffffff
  .case-detail-content
    width 1280px
    margin 0 auto
    position relative
    .fake-header
      height 64px
      width 100%
    .crumbs
      width 100%
      margin-bottom 32px
      font-size 16px
      font-weight 400
      color #7E87A0
      a
        color #4169E1
        cursor pointer
    .main-view
      background-color #ffffff
      width 100%
      position relative
      min-height 200px
      padding-bottom 60px
      .info-view
        width 880px
        .main-icon
          width 60px
          height 60px
        .main-title
          font-size 28px
          margin-left 72px
          color #181818
          height 60px
          font-family "PingFang SC"
          line-height 60px
          font-weight 600
        .desc-bar
          width 100%
          background-color #e3efff
          height 10px
        .main-desc
          font-size 14px
          color #5b5b5b
          padding 20px
          border 1px solid #3e3e3e
          width calc(100% - 48px)
          margin-left 24px
          line-height 28px
          text-align justify
          letter-spacing 1px
          font-family PingFangSC-light
          box-sizing border-box
        .slice-line
          width 100%
          height 2px
          background-color #e7e7e7
        .title-normal-item
          width calc(100% - 36px)
          padding-left 12px
          padding-right 24px
          height 48px
          line-height 48px
          background-color #e3efff
          color #181818
          display inline-block
          font-size 18px
          font-family PingFangSC-light
          font-weight bold
          font-style italic
        .info-item
          .img-item
            width 100%
            height auto
            img
              width 100%
              height 100%
          .text-item
            font-size 14px
            color #5b5b5b
            line-height 28px
            text-align justify
            letter-spacing 1px
            font-family PingFangSC-light
            box-sizing border-box
      .side-view
        width 360px
        min-height 200px
        padding 24px
        box-shadow 0 1px 7px 4px #ecf0f5
        border-radius 2px
        .title
          color #181818
          font-family PingFangSC-light
          font-weight bold
          font-size 16px
        .product-item
          width calc(100% - 24px)
          border 1px solid #4169E1
          padding 6px 12px
          display inline-block
          transition all 0.3s ease-in-out
          border-radius 2px
          position relative
          cursor pointer
          overflow hidden
          .icon-img
            width 30px
            height 30px
            transition all 0.3s ease-in-out
            margin-top 3px
          .title
            margin-left 12px
            height 36px
            line-height 36px
            font-family PingFangSC-light
            transition all 0.3s ease-in-out
            color #666666
            font-size 14px
          .mar-l48
            margin-left 48px
          .arrow-img
            width 32px
            height 32px
            position absolute
            transition all 0.3s ease-in-out
            display none
            right 12px
            top 6px
        .product-item:hover
          background-image linear-gradient(90deg, rgb(83, 96, 251) 0%, rgb(1, 187, 221) 96%)
          transition all 0.3s ease-in-out
          border 1px solid transparent
          .icon-img
            display none
            transition all 0.3s ease-in-out
          .title
            margin-left 12px
            color white
            transition all 0.3s ease-in-out
          .arrow-img
            display block
    .main-view:after
      visibility hidden
      display block
      font-size 0
      content ""
      clear both
      height 0
