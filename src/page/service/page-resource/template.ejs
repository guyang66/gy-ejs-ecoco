<section class="resource-main-wrap">
  <div class="resource-news-wrap">
    <div class="news-content">
      <div class="news-slide-container">
        <div class="swiper-wrapper">
          <% newsData.content.forEach(function(news){ %>
            <div class="swiper-slide slide-news-item">
              <div class="img-wrap fn-left">
                <img src="<%=news.cover%>" alt="新闻">
              </div>
              <div class="info-wrap fn-right">
                <div class="tag-wrap mar-t10">
                  <% news.tag.forEach(function(tag){ %>
                    <span class="tag mar-r10"><%=tag%></span>
                  <% }); %>
                </div>
                <div class="title mar-t20"><%=news.title%></div>
                <div class="desc mar-t10"><%=news.desc%></div>
                <div class="btn mar-t40">查看详情 ></div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
    <div class="page-view">
      <div class="news-pagination"></div>
    </div>
  </div>


  <div class="resource-download-wrap">
    <div class="resource-download-content">
      <div class="c-module-title <% if(!downloadData.desc){ %>c-module-b-60<% } %>">资料下载</div>
      <div class="c-module-desc"><%=downloadData.desc%></div>
      <div class="resource-view">
        <div class="tabs-view mar-b20" key="all">
          <div class="info">
            <% downloadData.tabs.forEach(function(tab){ %>
            <div class="tab-item fn-left"><%=tab.title%></div>
            <% }); %>
          </div>
          <div class="tab-line"></div>
        </div>
        <div class="search-view-wrap mar-t20 mar-b20">
          <div class="sort-view fn-left">
            <div class="tit fn-left mar-r10">排序：</div>
            <div class="sort-item download-sort">
              <div class="tit fn-left">下载量</div>
              <img class="icon fn-left download-icon" src="/assets/images/common/xiangshang.svg"/>
            </div>
          </div>
          <div class="search-view fn-right">
            <div class="search-input-view">
              <input name="search">
            </div>
            <div class="search-icon search-action">
              <img src="/assets/images/common/search-white.svg" alt="搜索">
            </div>
          </div>
        </div>
        <div class="content-view">
          <% downloadData.content.forEach(function(item, index){ %>
            <div class="content-cell mar-b20">
              <img class="icon fn-left" src="/assets/images/common/wenjian.svg" alt="文件"/>
              <div class="title">
                <%=item.title%>
                <% if(item.tag && item.tag.length > 0) { %>
                  <% item.tag.forEach(function(tag){ %>
                    <span class="tag"><%=tag%></span>
                  <% }); %>
                <% } %>
              </div>
              <% if(item.desc && item.desc !== '') { %>
                <div class="desc"><%=item.desc%></div>
              <% } %>
              <div class="extra-wrap">
                <div class="fn-left text-wrap">
                  <img src="/assets/images/service/resource/other/shijian.svg" alt="时间"/>
                  <span><%=item.date%></span>
                </div>
                <div class="fn-left text-wrap">
                  <img src="/assets/images/service/resource/other/xiazai.svg" alt="下载"/>
                  <span><%=item.download%>次下载</span>
                </div>
                <div class="fn-left text-wrap">
                  <img src="/assets/images/service/resource/other/daxiao.svg" alt="文件大小"/>
                  <span><%=item.size%></span>
                </div>
                <div class="fn-left text-wrap">
                  <img src="/assets/images/service/resource/other/ziyuan.svg" alt="文件类型"/>
                  <span><%=item.type%></span>
                </div>
              </div>

              <div class="btn-wrap">
                <span>点击下载</span>
                <img src="/assets/images/common/xiangyou-fill.svg" alt="下载"/>
              </div>

            </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>

  <%=formView%>
</section>
<script>
  $(function() {
    $('.resource-view .tabs-view .tab-item').on('click',function (){
      let index = $(this).index()
      if(index === 0){
        $('.resource-view .tab-line').css({left: 20 + 'px', width: 34 + 'px'})
      } else {
        let target = 20
        for(let i = 0; i < index; i++){
          target = target + $('.resource-view .tabs-view .tab-item').eq(i).width() + 40
        }
        $('.resource-view .tab-line').css({left: target + 'px',width:$(this).width()})
      }
    })

    $('.download-sort').on('click',function (){
      if($(this).attr('download') === 'desc'){
        $(this).attr('download','asc')
        $(this).children('.download-icon').css({transform: 'rotateZ(0deg)'})
      } else {
        $(this).attr('download','desc')
        $(this).children('.download-icon').css({transform: 'rotateZ(180deg)'})
      }
    })
  })
</script>
