@import "@/styles/layout.styl";
@import 'swiper/dist/css/swiper.css';
.help-main-wrap
  width 100%
  position relative
  .help-quick-wrap
    width 100%
    background #FFFFFF
    overflow hidden
    position relative
    .help-quick-content
      width 1280px
      margin 0 auto
      position relative
      .quick-view
        width 100%
        margin-bottom 40px
        .quick-cell
          width 400px
          padding 32px
          .top-view
            width 100%
            height 80px
            .icon
              background-color #4169E1
              width 80px
              height 80px
              position relative
              border-radius 2px
              overflow hidden
              img
                width 70%
                height 70%
                margin-left 15%
                margin-top 15%
            .title
              padding-top 12px
              margin-left 112px
              font-size 18px
              line-height 28px
            .desc
              font-size 16px
              margin-left 112px
              color #999999
              line-height 26px
              text-align justify
          .line
            background-color #eeeeee
            height 1px
            width auto
          .info-wrap
            width 100%
            .item-wrap
              width 50%
              height 32px
              .point
                width 6px
                height 6px
                margin-top 13px
                border-radius 3px
                background-image linear-gradient(90deg, #4169E1 0%, #5360fb 100%)
              .text
                margin-left 16px
                color #444444
                font-size 14px
                line-height 32px
                height 32px
                cursor pointer
              .text:hover
                color #4169E1
                text-decoration underline
          .info-wrap:after
            visibility hidden
            display block
            font-size 0
            content ""
            clear both
            height 0
          .btn
            font-size 14px
            color #4169E1
            line-height 20px
            margin-top 24px
            cursor pointer
      .quick-view:after
        visibility hidden
        display block
        font-size 0
        content ""
        clear both
        height 0
  .help-common-wrap
    width 100%
    background #FFFFFF
    overflow hidden
    position relative
    .help-common-content
      width 1280px
      margin 0 auto
      position relative
      .common-view
        width 100%
        min-height 100px
        margin-bottom 60px
        padding 32px
        .sec-title
          font-size 18px
          color #181818
        .common-cell
          width 33%
          .title
            color #999999
            font-size 16px
          .item-wrap
            width 100%
            height 32px
            .icon
              width 16px
              height 16px
              margin-top 8px
            .text
              margin-left 24px
              color #444444
              font-size 14px
              line-height 32px
              height 32px
              cursor pointer
            .text:hover
              color #4169E1
              text-decoration underline
      .common-view:after
        visibility hidden
        display block
        font-size 0
        content ""
        clear both
        height 0
